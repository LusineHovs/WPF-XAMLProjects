<Window x:Class="Wpf_ColorChanging.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_ColorChanging"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <Rectangle Fill="Red" MinHeight="100" MinWidth="10" Margin="10" MouseEnter="Rectangle_MouseEnter" MouseLeave="Rectangle_MouseLeave"/>
        <Rectangle Fill="Green" MinHeight="100" MinWidth="10" Margin="10" MouseEnter="Rectangle_MouseEnter" MouseLeave="Rectangle_MouseLeave"/>
    </StackPanel>
</Window>
